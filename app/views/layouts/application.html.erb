<!DOCTYPE html>
<html>
  <head>
    <title>Golf</title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <%= link_to 'Golf', root_path, :class => 'brand' %>
          <ul class="nav">
            <%= menu_link :root %>
            <%= menu_link :photos %>
            <%= menu_link :videos %>
            <%= menu_link :about %>
            <%= menu_link :blog_posts %>
          </ul>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="content">
        <div class="page-header">
          <h1><%= page_name %> <small><%= page_description %></small></h1>
        </div>
        <%= yield :slider%>
        <div class="row">
          <div class="span10">
            <%= yield %>
          </div>
          <div class="span4">
            <%= yield :sidebar %>
          </div>
        </div>
      </div>

      <footer>
        <p>&copy; Golf <%= Date.today.year %></p>
      </footer>

    </div>

  </body>
</html>
