<%= simple_form_for [:admin, @video], :html => { :multipart => true } do |form| %>
  <% if event_id = params[:event_id].presence %>
    <%= form.input :event_id, :as => :hidden, :input_html => { :value => event_id } %>
  <% else %>
    <%= form.association :event %>
  <% end %>
  
  <%# show video %>
  <%= form.input :movie, :as => :file %>
  <%= form.input :description %>
  
  <%= form.submit :class => 'btn success' %>
<% end %>
